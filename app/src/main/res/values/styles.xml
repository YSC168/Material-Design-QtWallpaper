<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/commonWhite</item>
        <item name="android:actionMenuTextColor">@color/commonWhite</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/commonBackground</item>
    </style>

    <style name="EmptyBgTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/commonWhite</item>
    </style>

    <style name="TranslucentTheme" parent="BaseAppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
