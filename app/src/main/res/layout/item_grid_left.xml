<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_grid_padding_big"
    android:layout_marginStart="@dimen/item_grid_padding_big"
    android:layout_marginRight="@dimen/item_grid_padding_small"
    android:layout_marginEnd="@dimen/item_grid_padding_small"
    android:layout_marginTop="@dimen/item_grid_padding_big"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/item_grid_shadow">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_view"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        fresco:failureImage="@drawable/common_holder"
        android:layout_height="wrap_content">
    </com.facebook.drawee.view.SimpleDraweeView>
</android.support.v7.widget.CardView>


